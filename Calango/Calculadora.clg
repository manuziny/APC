//  Objetivo: Oferecer um menu de opções ao usuário.
//  Entrada : Fornecer as opções aos usuários.
//  Saída   : Fornecer ao usuário as informações desejadas.


principal
	// Declarações
	inteiro menu;
	real num1, num2, resultado;
	real num3, num4;
		
	// Instruções
	
	escreval("Menu de opções:");
	escreval("1 - Informações");
	escreval("2 - Calcular IMC");
	escreval("3 - Multiplicação");
	escreval("4 - Sair");
	leia(menu);

	escolha(menu)
	caso 1
