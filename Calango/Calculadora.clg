		escreval(" ");
		escreval("Digite seu peso.");
		leia(num1);
		escreval("Digite sua altura");
		leia(num2);
		resultado = num1 / (num2 * num2);
		escreval(" ");
		escreval("Seu IMC é " + resultado);
		interrompa;
		caso 3
		escreval("Multiplicação");
		escreval(" ");
		escreval("Digite o primeiro número.");
		leia(num3);
		escreval("Digite o segundo número.");
		leia(num4);
		escreval(" ");
		resultado = (num3 * num4);
